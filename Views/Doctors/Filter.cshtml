@model IEnumerable<PruebaHospital.Models.Doctor>
@{
    ViewData["Title"] = "Filtrar Médicos";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-info">
            <i class="bi bi-funnel me-2"></i>Filtrar Médicos
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver al Listado
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">
                <i class="bi bi-search me-2"></i>Criterios de Búsqueda
            </h5>
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Especialidad</label>
                    <select name="speciality" class="form-select">
                        <option value="">Todas las especialidades</option>
                        @foreach (var speciality in ViewBag.Specialities ?? new List<string>())
                        {
                            <option value="@speciality" selected="@(ViewBag.SelectedSpeciality == speciality)">
                                @speciality
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Nombre</label>
                    <input type="text" name="name" class="form-control" placeholder="Buscar por nombre..." 
                           value="@ViewBag.SelectedName" />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">&nbsp;</label>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search me-1"></i>Buscar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-check me-2"></i>Resultados de la Búsqueda
                    <span class="badge bg-light text-dark ms-2">@Model.Count() médico(s) encontrado(s)</span>
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Documento</th>
                                <th>Nombre</th>
                                <th>Especialidad</th>
                                <th>Correo</th>
                                <th>Teléfono</th>
                                <th class="text-end pe-4">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doctor in Model)
                            {
                                <tr>
                                    <td class="ps-4">@doctor.Document</td>
                                    <td>@doctor.Name</td>
                                    <td><span class="badge bg-info">@doctor.Speciality</span></td>
                                    <td>@doctor.Email</td>
                                    <td>@doctor.Phone</td>
                                    <td class="text-end pe-4">
                                        <a href="@Url.Action("Details", new { id = doctor.Id })" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Ver
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <i class="bi bi-exclamation-triangle me-2"></i>
            No se encontraron médicos con los criterios especificados.
        </div>
    }
</div>