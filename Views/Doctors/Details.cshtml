@model PruebaHospital.Models.Doctor

@{
    ViewData["Title"] = "Detalles del Médico";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-success">
            <i class="bi bi-person-badge me-2"></i>Detalles del Médico
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver al Listado
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="bi bi-info-circle me-2"></i>Información del Médico
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold text-muted">Documento</label>
                    <p class="fs-6">@Model.Document</p>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold text-muted">Nombre Completo</label>
                    <p class="fs-6 fw-bold text-success">@Model.Name</p>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold text-muted">Especialidad</label>
                    <p class="fs-6">
                        <span class="badge bg-info fs-6">@Model.Speciality</span>
                    </p>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold text-muted">Correo Electrónico</label>
                    <p class="fs-6">
                        <i class="bi bi-envelope me-1"></i>
                        <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                    </p>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold text-muted">Teléfono</label>
                    <p class="fs-6">
                        <i class="bi bi-telephone me-1"></i>
                        <a href="tel:@Model.Phone" class="text-decoration-none">@Model.Phone</a>
                    </p>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold text-muted">Información Completa</label>
                    <p class="fs-6 fw-bold">@Model.FullInfo</p>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light">
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil me-1"></i>Editar
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-list me-1"></i>Volver al Listado
                </a>
            </div>
        </div>
    </div>
</div>