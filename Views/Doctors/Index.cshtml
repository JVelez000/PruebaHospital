@model IEnumerable<PruebaHospital.Models.Doctor>

@{
    ViewData["Title"] = "Médicos";
}

<nav class="navbar navbar-expand-lg navbar-glass shadow-lg sticky-top">
    <div class="container">
        <a class="navbar-brand fw-bold d-flex align-items-center" href="@Url.Action("Index", "Home")">
            <div class="hospital-logo me-2">
                <i class="bi bi-heart-pulse"></i>
            </div>
            <span class="brand-text">Hospital San Vicente</span>
        </a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarMain">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    <a class="nav-link nav-item-custom @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" 
                       href="@Url.Action("Index", "Home")">
                        <i class="bi bi-house me-2"></i>
                        <span>Inicio</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-item-custom @(ViewContext.RouteData.Values["controller"]?.ToString() == "Patients" ? "active" : "")" 
                       href="@Url.Action("Index", "Patients")">
                        <i class="bi bi-people me-2"></i>
                        <span>Pacientes</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-item-custom @(ViewContext.RouteData.Values["controller"]?.ToString() == "Doctors" ? "active" : "")" 
                       href="@Url.Action("Index", "Doctors")">
                        <i class="bi bi-heart-pulse me-2"></i>
                        <span>Médicos</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-item-custom @(ViewContext.RouteData.Values["controller"]?.ToString() == "Appointments" ? "active" : "")" 
                       href="@Url.Action("Index", "Appointments")">
                        <i class="bi bi-calendar-check me-2"></i>
                        <span>Citas</span>
                    </a>
                </li>
            </ul>
            
            <div class="navbar-user d-flex align-items-center">
                <div class="user-avatar bg-primary rounded-circle d-flex align-items-center justify-content-center me-2">
                    <i class="bi bi-person-fill text-white"></i>
                </div>
                <span class="text-white fw-semibold">Sistema</span>
            </div>
        </div>
    </div>
</nav>

@section Styles {
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
}

<div class="container-fluid px-4">
    <div class="row align-items-center py-4 mb-4 bg-light rounded-3">
        <div class="col">
            <div class="d-flex align-items-center">
                <div class="bg-primary rounded-circle p-3 me-3">
                    <i class="bi bi-heart-pulse text-white fs-2"></i>
                </div>
                <div>
                    <h1 class="h2 text-primary mb-1">Gestión de Médicos</h1>
                    <p class="text-muted mb-0">Administra el personal médico y sus especialidades</p>
                </div>
            </div>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Create")" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Nuevo Médico
            </a>
        </div>
    </div>
    
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <h5 class="card-title mb-0 text-primary">
                <i class="bi bi-funnel me-2"></i>Filtros Avanzados
            </h5>
        </div>
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-semibold text-muted">Especialidad Médica</label>
                    <select id="specialityFilter" class="form-select form-select-lg">
                        <option value="">Todas las especialidades</option>
                        @foreach (var speciality in ViewBag.Specialities ?? new List<string>())
                        {
                            <option value="@speciality">@speciality</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold text-muted">Acciones</label>
                    <div class="d-flex gap-2">
                        <button type="button" id="filterBtn" class="btn btn-primary flex-fill">
                            <i class="bi bi-search me-2"></i>Aplicar Filtro
                        </button>
                        <button type="button" id="clearFilter" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-clockwise"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-end">
                        <span class="badge bg-primary fs-6">
                            <i class="bi bi-people me-1"></i>@Model.Count() Médicos
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row g-4">
        @foreach (var doctor in Model)
        {
            <div class="col-xl-4 col-lg-6 col-md-6">
                <div class="card doctor-card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-3">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                <i class="bi bi-person-badge text-primary fs-4"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="card-title text-primary mb-1">@doctor.Name</h5>
                                <span class="badge bg-info fs-7">@doctor.Speciality</span>
                            </div>
                        </div>
                        
                        <div class="doctor-info mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-person-vcard text-muted me-2"></i>
                                <small class="text-muted">DOC: @doctor.Document</small>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-envelope text-muted me-2"></i>
                                <small class="text-muted">@doctor.Email</small>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-telephone text-muted me-2"></i>
                                <small class="text-muted">@doctor.Phone</small>
                            </div>
                        </div>

                        <div class="doctor-actions pt-3 border-top">
                            <div class="btn-group w-100" role="group">
                                <a href="@Url.Action("Details", new { id = doctor.Id })" 
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i>Ver
                                </a>
                                <a href="@Url.Action("Edit", new { id = doctor.Id })" 
                                   class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil me-1"></i>Editar
                                </a>
                                <button type="button" 
                                        class="btn btn-outline-danger btn-sm"
                                        onclick="confirmDelete(@doctor.Id, '@doctor.Name')">
                                    <i class="bi bi-trash me-1"></i>Eliminar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="bg-light rounded-3 p-5">
                <i class="bi bi-person-x display-1 text-muted mb-3"></i>
                <h3 class="text-muted">No hay médicos registrados</h3>
                <p class="text-muted mb-4">Comienza agregando el primer médico al sistema</p>
                <a href="@Url.Action("Create")" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle me-2"></i>Agregar Primer Médico
                </a>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center py-4">
                <i class="bi bi-person-x text-danger display-4 mb-3"></i>
                <h4 id="modalText" class="text-dark mb-3">¿Deseas eliminar este médico?</h4>
                <p class="text-muted">Esta acción no se puede deshacer y se perderán todos los datos del médico.</p>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cancelar
                </button>
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    function confirmDelete(id, name) {
        const modalText = document.getElementById("modalText");
        const form = document.getElementById("deleteForm");

        modalText.textContent = `¿Deseas eliminar al médico "${name}"?`;
        form.action = `/Doctors/Delete/${id}`;

        const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
        modal.show();
    }

    document.getElementById('filterBtn').addEventListener('click', function() {
        const speciality = document.getElementById('specialityFilter').value;
        if (speciality) {
            window.location.href = `@Url.Action("Index", "Doctors")?speciality=${encodeURIComponent(speciality)}`;
        }
    });

    document.getElementById('clearFilter').addEventListener('click', function() {
        window.location.href = '/Doctors/Index';
    });

    document.getElementById('specialityFilter').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            document.getElementById('filterBtn').click();
        }
    });
</script>
}
<style>
    .doctor-card {
        transition: all 0.3s ease;
        border: 1px solid #e9ecef;
    }
    
    .doctor-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        border-color: #007bff;
    }
    
    .doctor-info {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 15px;
    }
    
    .doctor-actions .btn {
        border-radius: 6px;
        font-weight: 500;
    }
</style>