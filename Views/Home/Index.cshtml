@section Styles {
<link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
}

@section Scripts {
<script>
    function animateCounter(elementId, target, duration = 2000) {
        const element = document.getElementById(elementId);
        let start = 0;
        const increment = target / (duration / 16);

        const timer = setInterval(() => {
            start += increment;
            if (start >= target) {
                element.textContent = target;
                clearInterval(timer);
            } else {
                element.textContent = Math.floor(start);
            }
        }, 16);
    }

    function animateCharts() {
        const bars = document.querySelectorAll('.bar-fill');
        bars.forEach(bar => {
            const percentage = bar.parentElement.getAttribute('data-percentage');
            setTimeout(() => {
                bar.style.width = percentage + '%';
            }, 500);
        });
    }

    document.addEventListener('DOMContentLoaded', function() {
        animateCounter('patientsCount', 156);
        animateCounter('doctorsCount', 28);
        animateCounter('appointmentsCount', 342);
        animateCounter('specialtiesCount', 12);

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    animateCharts();
                    observer.unobserve(entry.target);
                }
            });
        });

        const benefitsSection = document.querySelector('.benefits-visual');
        if (benefitsSection) {
            observer.observe(benefitsSection);
        }

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    });
</script>
}