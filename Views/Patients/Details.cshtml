@model PruebaHospital.Models.Patient

@{
    ViewData["Title"] = "Detalles del Paciente";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-primary">
            <i class="bi bi-person-badge me-2"></i>Detalles del Paciente
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver al Listado
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="bi bi-info-circle me-2"></i>Información del Paciente
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold text-muted">Documento</label>
                    <p class="fs-6">@Model.Document</p>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold text-muted">Nombre</label>
                    <p class="fs-6">@Model.FirstName</p>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold text-muted">Apellido</label>
                    <p class="fs-6">@Model.LastName</p>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold text-muted">Edad</label>
                    <p class="fs-6">@Model.Age años</p>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold text-muted">Correo Electrónico</label>
                    <p class="fs-6">
                        <i class="bi bi-envelope me-1"></i>
                        <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                    </p>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold text-muted">Teléfono</label>
                    <p class="fs-6">
                        <i class="bi bi-telephone me-1"></i>
                        <a href="tel:@Model.Phone" class="text-decoration-none">@Model.Phone</a>
                    </p>
                </div>
                <div class="col-12 mb-3">
                    <label class="form-label fw-semibold text-muted">Nombre Completo</label>
                    <p class="fs-6 fw-bold text-primary">@Model.FullName</p>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light">
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil me-1"></i>Editar
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-list me-1"></i>Volver al Listado
                </a>
            </div>
        </div>
    </div>
</div>