@model IEnumerable<PruebaHospital.Models.Appointment>

@{
    ViewData["Title"] = "Citas por Paciente";
    var patient = Model.FirstOrDefault()?.Patient;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 text-primary">
                <i class="bi bi-person me-2"></i>Citas del Paciente
            </h1>
            @if (patient != null)
            {
                <p class="text-muted mb-0">@patient.FullName - @patient.Document</p>
            }
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver a todas las citas
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-primary">
                            <tr>
                                <th class="ps-4">Fecha y Hora</th>
                                <th>MÃ©dico</th>
                                <th>Especialidad</th>
                                <th>Estado</th>
                                <th class="text-end pe-4">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold">@appointment.FormattedDate</div>
                                        <small class="text-muted">@appointment.FormattedTime</small>
                                    </td>
                                    <td>
                                        @if (appointment.Doctor != null)
                                        {
                                            <div>@appointment.Doctor.Name</div>
                                        }
                                    </td>
                                    <td>
                                        @if (appointment.Doctor != null)
                                        {
                                            <span class="badge bg-info">@appointment.Doctor.Speciality</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @appointment.StatusBadgeClass">@appointment.StatusDisplay</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <a href="@Url.Action("Details", new { id = appointment.Id })" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Ver
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <div class="mt-3">
            <span class="badge bg-light text-dark">Total: @Model.Count() citas</span>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle me-2"></i>
            El paciente no tiene citas registradas.
        </div>
    }
</div>