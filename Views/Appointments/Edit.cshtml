@model PruebaHospital.Models.Appointment

@{
    ViewData["Title"] = "Editar Cita";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-warning">
            <i class="bi bi-pencil-square me-2"></i>Editar Cita
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver a la lista
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post" class="row g-3">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <!-- Paciente -->
                <div class="col-md-6">
                    <label asp-for="PatientId" class="form-label fw-semibold">Paciente *</label>
                    <select asp-for="PatientId" class="form-select">
                        <option value="">Seleccione un paciente</option>
                        @foreach (var patient in ViewBag.Patients)
                        {
                            <option value="@patient.Id" selected="@(patient.Id == Model.PatientId)">@patient.FullName - @patient.Document</option>
                        }
                    </select>
                    <span asp-validation-for="PatientId" class="text-danger small"></span>
                </div>

                <!-- Médico -->
                <div class="col-md-6">
                    <label asp-for="DoctorId" class="form-label fw-semibold">Médico *</label>
                    <select asp-for="DoctorId" class="form-select">
                        <option value="">Seleccione un médico</option>
                        @foreach (var doctor in ViewBag.Doctors)
                        {
                            <option value="@doctor.Id" selected="@(doctor.Id == Model.DoctorId)">@doctor.Name - @doctor.Speciality</option>
                        }
                    </select>
                    <span asp-validation-for="DoctorId" class="text-danger small"></span>
                </div>

                <!-- Fecha -->
                <div class="col-md-6">
                    <label asp-for="Date" class="form-label fw-semibold">Fecha *</label>
                    <input asp-for="Date" type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="Date" class="text-danger small"></span>
                </div>

                <!-- Hora -->
                <div class="col-md-6">
                    <label asp-for="Time" class="form-label fw-semibold">Hora *</label>
                    <input asp-for="Time" type="time" class="form-control" />
                    <span asp-validation-for="Time" class="text-danger small"></span>
                </div>

                <!-- Razón -->
                <div class="col-12">
                    <label asp-for="Reason" class="form-label fw-semibold">Motivo de la consulta</label>
                    <textarea asp-for="Reason" class="form-control" rows="3" placeholder="Describa el motivo de la consulta...">@Model.Reason</textarea>
                    <span asp-validation-for="Reason" class="text-danger small"></span>
                </div>

                <!-- Estado (solo lectura) -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Estado actual</label>
                    <div class="form-control bg-light">
                        <span class="badge @Model.StatusBadgeClass">@Model.StatusDisplay</span>
                    </div>
                    <small class="form-text text-muted">Para cambiar el estado, use las acciones en la lista de citas.</small>
                </div>

                <div class="col-12 mt-4">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle me-1"></i>Actualizar Cita
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>Cancelar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('PatientId').focus();
    });
</script>